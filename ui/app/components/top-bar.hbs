<DenaliNavbar
  @isResponsive={{true}}
  class="top-bar"
  as |Nav|
>
  <Nav.Left as |Left|>
    <DirSidebarToggle />
    <LinkTo @route="index">
      <Left.Logo src="{{this.rootURL}}img/yavin-logo.svg"/>
    </LinkTo>
  </Nav.Left>
  <Nav.Right as |Right|>
    <a href="https://github.com/yavin-dev">
      <Right.Icon @icon="github" @name="Github"/>
    </a>
    <Right.Item><DenaliIcon class="m-r-10" @icon="user-profile-circle"/>{{this.loggedInUser}}</Right.Item>
  </Nav.Right>
</DenaliNavbar>